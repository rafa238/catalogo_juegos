{{>head}}

<body>
  
  <div class="d-flex" id="wrapper">

    <!-- Sidebar -->
    {{>aside}}
    <!-- /#sidebar-wrapper -->

    <!-- Page Content -->
    <div id="page-content-wrapper">
      <div class="container " id="contenido">
        <h1 class="mt-1">Catalogo de VideoJuegos</h1>
        <div class="row mt-3">
          {{#each juegos}}
            <div class="col-md-3">
              <div class="card mb-4 shadow-sm">
                <img class="bd-placeholder-img card-img-top" width="100%" height="225"
                  src={{imagen}}
                  preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: Thumbnail">
                <div class="card-body">
                  <h5 class="card-title">{{nombre}}</h5>
                  <p class="card-text">{{descripcion}}</p>
                  <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                      <a href="/delete/{{id_juego}}" class="btn btn-sm btn-outline-secondary">Eliminar</a>
                      <a href="/update/{{id_juego}}" class="btn btn-sm btn-outline-secondary">Editar</a>
                    </div>
                    <small class="text-muted">{{nombre_estudio}} </small>
                  </div>
                </div>
              </div>
            </div>
          {{/each}}
        </div>
      </div>
      <!-- /#page-content-wrapper -->
    </div>
  </div>
  <!-- /#wrapper -->
  
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
</body>

</html>